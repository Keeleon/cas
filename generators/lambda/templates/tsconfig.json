{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "ES2018",
    "strict": true,
    "noImplicitReturns" : true,
    "forceConsistentCasingInFileNames" : true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
